// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "BLITZ ARM64 Full",
  "dockerComposeFile": "../compose.arm.full.yml",
  "service": "blitz-arm-full",
  "workspaceFolder": "/host",
  "features": {},
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools@1.17.5",
        "ms-python.python",
        "rust-lang.rust-analyzer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },
        "python.defaultInterpreterPath": "/usr/bin/python3"
      }
    }
  },
  "postCreateCommand": "systemctl status || echo 'Systemd initializing...' && echo 'ðŸš€ BLITZ ARM64 Full Environment Ready!' && echo 'Blitz installed at: /opt/blitz/B.L.I.T.Z' && echo 'Autobahn installed at: /opt/blitz/autobahn'",
  "remoteUser": "root",
  "overrideCommand": false,
  "initializeCommand": "echo 'Building systemd-enabled container...'",
  "postStartCommand": "sleep 2 && systemctl is-system-running --wait || true"
}
